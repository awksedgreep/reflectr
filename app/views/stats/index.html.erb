<h1>Listing stats</h1>

<table>
  <tr>
    <th>Metric</th>
    <th>Device</th>
    <th>String value</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stats.each do |stat| %>
  <tr>
    <td><%= stat.metric_id %></td>
    <td><%= stat.device_id %></td>
    <td><%= stat.string_value %></td>
    <td><%= stat.value %></td>
    <td><%= link_to 'Show', stat %></td>
    <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
    <td><%= link_to 'Destroy', stat, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

