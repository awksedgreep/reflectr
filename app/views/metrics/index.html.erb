<h1>Listing metrics</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Pollgroup</th>
    <th>Metric type</th>
    <th>Data type</th>
    <th>Port</th>
    <th>Property</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @metrics.each do |metric| %>
  <tr>
    <td><%= metric.name %></td>
    <td><%= metric.pollgroup_id %></td>
    <td><%= metric.metric_type_id %></td>
    <td><%= metric.data_type_id %></td>
    <td><%= metric.port %></td>
    <td><%= metric.property %></td>
    <td><%= link_to 'Show', metric %></td>
    <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
    <td><%= link_to 'Destroy', metric, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

